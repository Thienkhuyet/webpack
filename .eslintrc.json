{
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-useless-escape": "off",
    "no-console": "warn",
    "no-multi-spaces": "error",
    "semi": ["error", "always"]
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "eslint:recommended",
  "globals": {
    "document": true,
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": ["react"]
}
